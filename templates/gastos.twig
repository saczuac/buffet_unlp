{% extends "layout.twig" %}

{% block contenido %}



    <div id="new" class="modal">
      <form method="post" class="modal-content abm-content">
        <a class="close" onclick="cerrar()" onkeypress="cerrar()" role="button">×</a>
        <h3>Nueva venta</h3>
        <label for="newSpendingName">Nombre: </label>
        <input type="text" id="newSpendingName" maxlength="20" placeholder="Nombre" required />
        <label for="newSpendingDescription">Descripcion: </label>
        <input type="text" id="newSpendingDescription" maxlength="20" placeholder="Descripcion" required />
        <label for="newSpendingProvider">Proveedor: </label>
        <input type="text" id="newSpendingProvider" maxlength="20" placeholder="Proveedor" required />
        <label for="newSpendingMount">Monto: </label>
        <input type="number" id="newSpendingMount" value="0" placeholder="Monto" required/>
        <label for="newSpendingDate">Fecha: </label>
        <input type="date" id="newSpendingDate" required/>
        <input type="submit" value="Agregar"/>
      </form>
    </div>
    <div id="edit" class="modal">
      <form method="post" class="modal-content abm-content">
        <a class="close" onclick="cerrar()" onkeypress="cerrar()" role="button">×</a>
        <h3>Editar venta</h3>
        <label for="editSpendingName">Nombre: </label>
        <input type="text" id="editSpendingName" maxlength="20" placeholder="Nombre" value="Productos" required/>
        <label for="editSpendingDescription">Descripcion: </label>
        <input type="text" id="editSpendingDescription" maxlength="20" placeholder="Descripcion" value="Don saturn" required/>
        <label for="editSpendingProvider">Proveedor: </label>
        <input type="text" id="editSpendingProvider" maxlength="20" placeholder="Proveedor" value="Mayorista de galletitas" required/>
        <label for="editSpendingMount">Monto: </label>
        <input type="number" id="editSpendingMount" value="500" placeholder="Monto" required/>
        <label for="editSpendingDate">Fecha: </label>
        <input type="date" id="editSpendingDate" required/>
        <input type="submit" value="Modificar"/>
      </form>
    </div>
    <div id="delete" class="modal">
      <form method="post" class="modal-content abm-content">
        <a class="close" onclick="cerrar()" onkeypress="cerrar()" role="button">×</a>
          <h4> ¿Realmente desea eliminar este gasto?</h4><br>
        <input type="submit" value="Confirmar"/>
      </form>
    </div>
