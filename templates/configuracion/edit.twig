{% extends "layout.twig" %}

{% block contenido %}

<div class="container">
	<div class="col col-12 card">
		<form action={{ parr.id }} method="POST">
			<p>
				<span class="field">Contenido: </span>
				<textarea maxlength="1024" name="contenido" title="contenido" id="contenido" rows="30" cols="58"> 
					{{parr.parrafo}} 
				</textarea>
				<br>
			</p>
			<input class="btn" type="submit" value="Editar Parrafo">
		</form>
	</div> 

</div>

{% endblock %}