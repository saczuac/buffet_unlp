{% extends "layout.twig" %}

{% block contenido %}

<div class="container">
	<div class="col col-6 card">
		<h2 class="title">
			<span class="icon">
				<i class="fa fa-folder"></i>
			</span>
			{{ usuario.username }}
		</h2>
		<form action="/usuarios/editar/{{usuario.id}}" method="POST">

			<p><span class="field">Nombre: </span><input type="text" name="name" value={{ usuario.name }}><br></p>
			<p><span class="field">Email: </span><input type="text" name="email" value={{ usuario.email }}><br></p>
			<p><span class="field">Rol: </span><select name="rol">
			  <option value="1">Consultor</option>
			  <option value="2">Lider</option>
			  <option value="3">Gerente</option>
			</select></p>
				<span class="btn btn-primary">
		<i class="fa fa-check"></i>
		<input type="submit" value="Crear item"/>

	</span>
					<a href="/usuarios/cambiarPass/{{usuario.id}}" class="btn btn-primary">
		<i class="fa fa-plus-circle"></i>Cambiar Password
	</a>
	</div> 

</div>

{% endblock %}