{% extends "layout.twig" %}

{% block contenido %}

<div class="container">
	<div class="col col-4 card">
		<h2 class="title">
			<span class="icon">
				<i class="fa fa-user"></i>
			</span>
			{{ alumno.nombre }} {{ alumno.apellido }}
		</h2>
		<!--<pre class="debug">{{ dump(alumno) }}</pre>-->
		<div class="student-data">
			<p>
				<span class="field">Tipo Documento: </span>
				{{ alumno.getTipoDocumento }}
			</p>
			<p>
				<span class="field">N° Documento: </span>
				{{ alumno.getNumeroDocumento }}
			</p>
			<p>
				<span class="field">Fecha Nacimiento: </span>
				{{ alumno.fecha_nacimiento | date("d/m/Y") }}
			</p>
			<p>
				<span class="field">Sexo: </span>
				{{ alumno.sexo | capitalize}}
			</p>
			<p>
				<span class="field">Direccion: </span>
				{{ alumno.calle }} N° {{ alumno.numero }}
			</p>
			<p>
				<span class="field">Alta: </span>
				{{ alumno.fecha_alta | date("d/m/Y") }}
			</p>
			<p>
				<span class="field">Email: </span>
				<a href="mailto: {{ alumno.email }}">{{ alumno.email }}</a>
			</p>
		</div>
		<div class="right">
			<a href="/alumnos/{{ alumno.id }}/edit" class="btn btn-primary">
				<i class="fa fa-pencil"></i>Modificar
			</a>
			{% include 'alumnos/_delete.twig' with { 'id' : alumno.id, 'value' : 'Eliminar' } %}
		</div>
	</div>

	<div class="col col-8 card">
		<h2 class="title">
			<span class="icon">
				<i class="fa fa-group"></i>
			</span>
			Responsables
		</h2>
		{% include 'responsable/index.twig' with { 'alumno' : alumno } %}
	</div>
</div>

{% endblock %}