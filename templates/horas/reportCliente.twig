{% extends "layout.twig" %}

{% block contenido %}

<div id="map-modal" class="modal__overlay">
	<div class="modal__map__wrap">
		<div class="col col-12 listado">
			<span id="close-modal" class="right toggle-modal">&#10006;</span>
			<h2>Recorridos</h2>
			<div id="pathsMap">
			</div>
		</div>
	</div>
</div>

<div class="container">

	<div class="main-header">
		<span class="icon">
			<i class="fa fa-bars fa-3x"></i>
		</span>
		<h2 class="title">Listado de horas de {{cliente.nombreCliente}}</h2>
		<p class="main-description">A continuaci&oacute;n se ve el listado de horas .</p>
	</div>
	<div class="listado">
		<form id="recorridos_form" action="alumnos/recorridos" method="post">
<table>
	<thead class="table-header">
		<tr>
			<th>Proyecto</th>
			<th>Fecha</th>
			<th>Horas</th>
			<th>Tarea</th>
			<th>Descripcion</th>
			{% if editable %}
				<th>Acciones</th>
			{% endif %}
		</tr>
	</thead>
	<tbody>
		{% for hora in cliente.horas %}
			<tr class="table-data-row">
				<td>{{ hora.proyecto.nombreProyecto }}</td>
				<td>{{ hora.fecha| date("d/m/Y")}}</td>
				<td>{{ hora.horas }}</td>
				<td>{{ hora.tarea.nombreTarea }}</td>
				<td>{{ hora.descripcion}}</td>
			</tr>
		{% endfor %}
	</tbody>
	</table>
</form>
	</div>
</div>	

{% endblock %}