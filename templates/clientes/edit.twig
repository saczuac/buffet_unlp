{% extends "layout.twig" %}

{% block contenido %}

<div class="container">
	<div class="col col-6 card">
		<h2 class="title">
			<span class="icon">
				<i class="fa fa-user"></i>
			</span>
			{{ cliente.nombreCliente }}
		</h2>
		<!--<pre class="debug">{{ dump(alumno) }}</pre>-->
	<form id="alumnos_new" action="/clientes/edit/{{cliente.id}}" method="POST">
	<div class="input-group">
		<label for="descripcion">Descripcion</label>
		<textarea name="descripcion" cols="40" rows="5" maxlength="255" required>{{cliente.descripcion}}</textarea>
		<br />
	</div>

	<div class="input-group">
		<label for="fecha">Fecha</label>
		<input type="datepicker" name="fecha" value="{{cliente.fechaIngreso | date("d-m-Y")}}">
		<br />
	</div>
		<span class="btn btn-primary">
		<i class="fa fa-check"></i>
		<input type="submit" value="Agregar cliente"/>
	</span>
</form>
</div>

</div>
{% endblock %}