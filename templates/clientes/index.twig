{% extends "layout.twig" %}

{% block contenido %}

<div id="map-modal" class="modal__overlay">
	<div class="modal__map__wrap">
		<div class="col col-12 listado">
			<span id="close-modal" class="right toggle-modal">&#10006;</span>
			<h2>Recorridos</h2>
			<div id="pathsMap">
			</div>
		</div>
	</div>
</div>

<div class="container">

	<div class="main-header">
		<span class="icon">
			<i class="fa  fa-university fa-3x"></i>
		</span>
		<h2 class="title">Listado de clientes</h2>
		<p class="main-description">A continuaci&oacute;n se ve el listado de los clientes .</p>
		<a href="clientes/new" class="btn btn-primary"><i class="fa fa-plus-circle fa-lg"></i>Nuevo Cliente</a>
	</div>
	<div class="listado">
		<form id="recorridos_form" action="alumnos/recorridos" method="post">
<table>
	<thead class="table-header">
		<tr>
			<th>Nombre</th>
			<th>descripcion</th>
			<th>Fecha ingreso</th>
			<th>Editar</th>
		</tr>
	</thead>
	<tbody>
		{% for cliente in clientes %}
			<tr class="table-data-row">
				<td><a href="clientes/show/{{ cliente.id }}" title="Editar">{{ cliente.nombreCliente }}</a>
						
				</td>
				<td>{{cliente.descripcion}}</td>
				<td>{{cliente.fechaIngreso| date("d/m/Y")}}</td>
				<td><a href="clientes/edit/{{cliente.id}}" title="Editar"><i class="fa fa-pencil"></i></a></td>

			</tr>
		{% endfor %}
	</tbody>
	</table>
</form>
	</div>
</div>	

{% endblock %}