{% macro input(name, value, class, type, size) %}
    <input 
    	class="{{ class|default('')}}" 
    	type="{{ type|default('text') }}" 
    	name="{{ name }}" 
    	value="{{ value|e }}" 
    	size="{{ size|default(20) }}" 
        required
    />
{% endmacro %}

{% macro optional_input(name, value, class, type, size) %}
    <input 
        class="{{ class|default('')}}" 
        type="{{ type|default('text') }}" 
        name="{{ name }}" 
        value="{{ value|e }}" 
        size="{{ size|default(20) }}" 
    />
{% endmacro %}

{% macro textarea(name, value, rows, cols) %}
    <textarea 
    	name="{{ name }}" 
    	rows="{{ rows|default(10) }}" 
    	cols="{{ cols|default(40) }}">{{ value|e }}
    </textarea>
{% endmacro %}