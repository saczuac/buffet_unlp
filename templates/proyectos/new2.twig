{% extends 'layout.twig' %}

{% block contenido %}	

<div class="container">
	<div class="col col-12 listado formulario">
		<div class="container">
			<a href="/clientes/show/{{cliente.id}}"><i class="fa fa-chevron-left icon"></i>Atras</a>
			<h2 class="title">
				Nuevo proyecto
			</h2>
			<form id="alumnos_new" action="/proyectos/new" method="POST">
			<h3 class="title">
				Cliente: 
		<select name="cliente" id="mySelect">
			{% if ((selected == null)) %}
			<option value="aa" selected >elija un cliente</option>
			{% endif %}	
		{% for cliente in clientes %}
			{% if ((cliente.id == selected)) %}
			<option value="{{ cliente.id }}" selected >{{ cliente.nombreCliente }}</option>
			{% else %}			
				
			<option value="{{ cliente.id }}">{{ cliente.nombreCliente }}</option>
			{% endif %}
		{% endfor %}
		</select>
			<br />
			</h3>
	<div class="input-group">
		<label for="proyecto">Nombre proyecto</label>
		<textarea name="proyecto" cols="40" rows="3"  maxlength="100" required></textarea>
		<br />
	</div>

	<div class="input-group">
		<label for="descripcion">Descripcion</label>
		<textarea name="descripcion" cols="40" rows="5" maxlength="255" required></textarea>
		<br />
	</div>


		<span class="btn btn-primary">
			<i class="fa fa-check"></i>
			<input type="submit" value="Agregar Proyecto"/>
		</span>
	</form>
		</div>
	</div>
</div>

{% endblock %}