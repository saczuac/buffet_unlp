{% extends "layout.twig" %}

{% block contenido %}

<div class="container">
	<div class="col col-6 card">
		<h2 class="title">
			<span class="icon">
				<i class="fa fa-cogs"></i>
			</span>
			{{ proyecto.cliente.nombreCliente }}->{{ proyecto.nombreProyecto }}

		</h2>
		<!--<pre class="debug">{{ dump(alumno) }}</pre>-->
		<div class="student-data">
			<p>
				<span class="field">Descripcion: </span>
				{{ proyecto.descripcion }}
			</p>
		</div>

	</div>

	<div class="col col-6 card">
		<h2 class="title">
			<span class="icon">
				<i class="fa fa-sitemap"></i>
			</span>
			Items
		</h2>
		{% include 'item/_index2.twig' with {'items' : proyecto.items} %}

		<a href="{{proyecto.id}}/items/new" class="btn btn-primary">
		<i class="fa fa-plus-circle"></i>Agregar
	</a>


</div>
</div>

{% endblock %}