{% extends 'layout.twig' %}

{% block contenido %}	

<div class="container">
	<div class="col col-6 listado formulario form-centered">
		<div class="container">
			<a href="/alumnos"><i class="fa fa-chevron-left icon"></i>Atras</a>
			<h2 class="title">
				Seleccionar Responsable
			</h2>
			<form action="" method="POST">
			<select name="id_responsable">
				{% for proyecto in proyectos %}
					<option value="{{ proyecto.id }}">{{ proyecto.nombreProyecto }}</option>
				{% endfor %}
			</select>
			<br>
			<br>
			<span class="btn btn-primary">
				<i class="fa fa-check"></i>
				<input type="submit" value="Asignar Responsable"/>
			</span>
		</form>
		</div>
	</div>
</div>

{% endblock %}